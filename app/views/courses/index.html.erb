<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>Language</th>
      <th>Study type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.code %></td>
        <td><%= course.language %></td>
        <td><%= course.study_type %></td>
        <td><%= button_to 'Show', course, method: :get %></td>
        <td><%= button_to 'Edit', edit_course_path(course.id), :method => :get %></td>
        <td><%= button_to 'Destroy', course, method: :delete, :onclick => "return confirm('Are you sure you want to delete this teacher and all his/her lessons?')" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
