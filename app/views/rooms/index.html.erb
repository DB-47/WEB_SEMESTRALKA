<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.code %></td>
        <td><%= room.building %></td>
        <td><%= button_to 'Show', room, method: :get %></td>
        <td><%= button_to 'Edit', edit_room_path(room.id), :method => :get %></td>
        <td><%= button_to 'Destroy', room, method: :delete, :onclick => "return confirm('Are you sure you want to delete this room?')" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
