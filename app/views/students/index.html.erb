<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Study type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><%= student.study_type %></td>
        <td><%= button_to 'Show', student, method: :get %></td>
        <td><%= button_to 'Edit', edit_student_path(student.id), :method => :get %></td>
        <td><%= button_to 'Destroy', student, method: :delete, :onclick => "return confirm('Are you sure you want to delete this student?')" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
